<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark"
    tools:context=".Activity.AddPodActivity"
    android:weightSum="1">

    <ImageButton
        android:layout_centerInParent="true"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/btn_add_pod"
        android:contentDescription="@string/pod"
        android:src="@mipmap/ic_capsule"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPodCountLabel"
        android:layout_above="@+id/tv_add_pod_count"
        android:textColor="@color/white_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="@string/number_of_pods"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_add_pod_count"
        android:layout_above="@+id/btn_add_pod"
        android:textColor="@color/white_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:width="40dp"
        android:textSize="20sp" />
</RelativeLayout>
